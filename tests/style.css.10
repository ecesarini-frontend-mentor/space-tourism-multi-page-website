:root {
    --back: hsl(230, 35%, 7%);
    --head: hsl(231, 77%, 90%);
    --content: hsl(0, 0%, 100%);
    --body-text: hsl(231, 79%, 90%);

    --desktop-w: 1440px;
    --desktop-h: 900px;

    --nav-width: 57.64vw;
}

html { 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }


body {
    box-sizing: content-box;
    margin: 0;
    max-width: 100vw;
    width: 100%;
    height: 100vh;
    font-family: "Bellefair", sans-serif;
    font-size: 18px;
}
main {
    width: 100%;
}
a {
    text-decoration: none;
}
ul {
    list-style: none;
}
button {
    padding: 0;
    border: 0;
    color: inherit;
    background-color: inherit;
}
h1, h2, h3, h4, .subhead1 { 
    font-family: 'Bellefair', serif; 
    font-weight: normal;
}
h5, .subhead2, .navtext, .body-text { 
    font-family: 'Barlow Condensed', sans-serif; 
    font-weight: normal;
}

h1 { 
    font-size: 150px;   
    text-transform: uppercase; 
}
h2 { font-size: 100px; }
h3 { font-size: 56px; }
h4 { font-size: 32px; }
h1, h2, h3, h4 { color: var(--content) }
h5 { 
    color: var(--head);
    font-size: 28px; 
    letter-spacing: 4.75px;
    text-transform: uppercase;
}
.body-text {
    color: var(--body-text);
    font-size: 18px;
    line-height: 30px;
    letter-spacing: 1px;
}
.subhead1 { font-size: 28px; }
.subhead2 { font-size: 14px; letter-spacing: 2.35px; }
.navtext { 
    font-size: 16px; 
    letter-spacing: 2.7px; 
    text-transform: uppercase; 
}


/* Design Home Page FIGMA DIRECTIVES and responsive*/
header {
    width: 100%;
    min-height: 10.67%; /*To let '.nav-index' grow outer parent flexbox needs height.*/
    height: 10.67%;
    display: flex;
    margin-top: 4.44vh;
    justify-content: space-between;
    align-items: center;
}
header img {
    margin-left: 3.75vw;
    width: 48px;
    height: 48px;
    transition: all 0.9s ease-in-out;
}
header a:hover img {
    width: 40px;
    height: 40px;
    transform: rotate(360deg);
}
header hr {
    max-width: 32.85vw;
    flex-grow: 1;
    mix-blend-mode: normal;
    background-color: hsla(0, 0%, 59%, 1);
    border: 1px solid hsla(0, 0%, 59%, 1);
    opacity: 25.15%;
    transform: translateX(4.51vw);
    z-index: 1;
}
.nav-index { 
    width: var(--nav-width);
    max-width: var(--nav-width);
    height: 100%; /* Let flex item fill all 'header' container height.*/
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(81.5485px);
}
.nav-index ul {
    height: 100%;
    margin: 0;
    padding: 0 11.46vw 0 8.54vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.navbar-content-element {
    height: 100%;
}
.navbar-content-element:hover {
    border-bottom: 3px solid rgba(255, 255, 255, 0.50);
}
.navbar-content-element a {
    display: flex;
    align-items: center; /* 'align-content' depends on the whole fb content, 'align-items' acts respect to each fb child */
    height: 100%;
}
.navbar-content-element a:visited {
    border-bottom: 3px solid rgba(255, 255, 255);
}
.navbar-content-element a span:first-child {
    font-weight: 700;
}
.navbar-content-element span {
    display: inline-block;
    margin: 0 3px;
    color: var(--content);
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 19px;
    letter-spacing: 2.7px;
}

/* Main content */

.grid-content {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-items: center;
    align-items: center;
    color: inherit;
}
