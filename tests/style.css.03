.grid-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-items: center;
    align-items: center;
}

.descriptor {
    grid-column: 1 / 2;
}
.explorer {
    grid-column: 2 / 3;
}
.explorer button {
    width: 38%;
    height: 38%;
    background-color: white;
    border-radius: 50%;
}
.explorer button span {
    font-size: 32px;
    line-height: 37px;

    letter-spacing: 2px;
}
