:root {
    --back: hsl(230, 35%, 7%);
    --head: hsl(231, 77%, 90%);
    --content: hsl(0, 0%, 100%);

    --desktop-w: 1440px;
    --desktop-h: 900px;
}

body {
    box-sizing: content-box;
    margin: 0;
    width: 100%;
    max-height: 100vh;   
    height: 100vh;
    background-image: url('/assets/home/background-home-desktop.jpg'); /* Needs absolute path */
    background-repeat: no-repeat;
    background-size: cover;
}
main {
    width: 100%;
}
a {
    text-decoration: none;
}
ul {
    list-style: none;
}

h1, h2, h3, h4, .subhead1 { font-family: 'Bellefair', serif; }
h5, .subhead2, .navtext, .bodytext { font-family: 'Barlow Condensed', sans-serif; }

h1 { font-size: 150px; }
h2 { font-size: 100px; }
h3 { font-size: 56px; }
h4 { font-size: 32px; }
h5 { font-size: 28px; letter-spacing: 4.75px;}
.subhead1 { font-size: 28px; }
.subhead2 { font-size: 14px; letter-spacing: 2.35px; }
.navtext { font-size: 16px; letter-spacing: 2.7px; }


/* Design Home Page FIGMA DIRECTIVES and responsive*/
header {
    display: flex;
    margin: 40px 0 0 55px;
    justify-content: space-between;
    align-items: center;
}
header img {
    width: 48px;
    height: 48px;
}
header hr {
    display: block;
    /*width: 100%;
    max-width: 473px;*/
    height: 1px;
    /*mix-blend-mode: normal;*/
    background-color: hsl(54, 0, 59, 100%);
    z-index: 1;
}
.nav-index {
    width: 57.64%;
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(81.5485px);
}
.nav-index ul {
    display: flex;
    justify-content: space-between;
}
.nav-index span {
    color: white;
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 19px;
    letter-spacing: 2.7px;
}
.nav-index span:first-child {
    font-weight: 700;
}
